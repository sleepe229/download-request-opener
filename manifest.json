{
    "manifest_version": 3,
    "name": "Download Request Opener",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "description": "Открывает запросы, начинающиеся с 'download', в новой вкладке для определённых доменов."
  }
  